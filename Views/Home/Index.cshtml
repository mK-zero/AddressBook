@{
    ViewData["Title"] = "Home Page";
}
 <!-- v0.0.1.1 -->
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container pt-0">
    <div class="row justify-content-center">
        <div class="col">
            
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="mb-5 section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h1 class="mb-5">Address Book</h1>
                <h5>The Address Book lets you save contact information </h5>
                <ul>
                    <li>Save contact information such as address, email and phone number.</li>
                    <li>Contacts are stored in a database.</li>
                    <li>Contacts can be listed, added, deleted or edited.</li>
                </ul>
                <div>
                    <a class="btn btn-secondary" asp-area="" asp-controller="Contacts" asp-action="Index">Try it out</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-lg-8 col-md-6">
            <div class="mb-2 section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h4 class="mb-3">Instructions:</h4>
                <p>Navigate to App via navigation bar or "Try it Out".</p>
                <p>Add contacts by clicking "Create New".</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="section bg-dark text-white p-3 rounded shadow-sm bg-opacity">
                <h4 class="mb-3">Technologies used</h4>
                <i class="fab fa-microsoft fa-3x me-3" id="msicon"></i>
                <i class="fab fa-js-square fa-3x me-3" id="jsicon"></i>
                <i class="fab fa-bootstrap fa-3x me-3" id="bsicon"></i>
                <i class="fab fa-html5 fa-3x me-3" id="html5icon"></i>
                <i class="fab fa-css3-alt fa-3x me-3" id="css3icon"></i>
            </div>
        </div>
    </div>
</div>
